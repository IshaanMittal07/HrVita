# Python Example: Reading Entities
# Filterable fields: full_name, patient_id, photo_url
import requests

def make_api_request(api_path, method='GET', data=None):
    url = f'https://app.base44.com/api/{api_path}'
    headers = {
        'api_key': 'e25e32baccea422abcf040ba8fa1bd3c',
        'Content-Type': 'application/json'
    }
    if method.upper() == 'GET':
        response = requests.request(method, url, headers=headers, params=data)
    else:
        response = requests.request(method, url, headers=headers, json=data)
    response.raise_for_status()
    return response.json()

entities = make_api_request(f'apps/690b775feb7e90cfa6099ad5/entities/Patient')
print(entities)

# Python Example: Updating an Entity
# Filterable fields: full_name, patient_id, photo_url
def update_entity(entity_id, update_data):
    response = requests.put(
        f'https://app.base44.com/api/apps/690b775feb7e90cfa6099ad5/entities/Patient/{entity_id}',
        headers={
            'api_key': 'e25e32baccea422abcf040ba8fa1bd3c',
            'Content-Type': 'application/json'
        },
        json=update_data
    )
    response.raise_for_status()
    return response.json()
